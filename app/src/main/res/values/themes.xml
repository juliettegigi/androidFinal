<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExploradorDeLugaresTurísticos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ExploradorDeLugaresTurísticos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ExploradorDeLugaresTurísticos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExploradorDeLugaresTurísticos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyTheme" parent="Theme.ExploradorDeLugaresTurísticos">
        <item name="android:fontFamily">@font/signika_negative_semibold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/textviews</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>

    </style>
</resources>